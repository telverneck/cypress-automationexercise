{
  "name": "cypress-automationexercise",
  "version": "1.0.0",
  "description": "Projeto Cypress com mochawesome e relat√≥rio HTML",
  "scripts": {
    "clean:reports": "del /f /q cypress\\reports\\report.json cypress\\reports\\mochawesome*.json && rmdir /s /q cypress\\reports\\html",
    "test:run": "npx cypress run --reporter mochawesome --reporter-options reportDir=cypress/reports,overwrite=false,html=false,json=true",
    "test:merge": "node mergeReports.js",
    "test:html": "npx marge cypress/reports/report.json --reportDir cypress/reports/html",
    "test:report": "npm run clean:reports && npm run test:run && npm run test:merge && npm run test:html"
  },
  "dependencies": {
    "cypress": "^12.0.0",
    "mochawesome": "^7.1.3",
    "mochawesome-merge": "^4.2.0",
    "mochawesome-report-generator": "^6.2.0"
  }
}
